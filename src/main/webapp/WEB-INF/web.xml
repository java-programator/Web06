<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>error01</servlet-name>
    <servlet-class>pl.altkom.web.ErrorServlet1</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>error01</servlet-name>
    <url-pattern>/error01</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>error02</servlet-name>
    <servlet-class>pl.altkom.web.ErrorServlet2</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>error02</servlet-name>
    <url-pattern>/error02</url-pattern>
  </servlet-mapping>

<error-page>
  <error-code>404</error-code>
  <location>/error_page.html</location>
</error-page>

</web-app>
